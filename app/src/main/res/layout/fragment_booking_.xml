<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginEnd="15dp"
                android:text="Khách đang chờ"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingTop="9dp"
                android:paddingStart="32dp"
                android:textColor="#FF4A4949"
                android:background="@drawable/header_list_booking"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvKhachDangCho"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginEnd="15dp"
                android:text="Khách chưa tới"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingTop="9dp"
                android:paddingStart="32dp"
                android:textColor="#FF4A4949"
                android:background="@drawable/header_list_booking"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvKhachChuaToi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginEnd="15dp"
                android:text="Khách đang phục vụ"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingTop="9dp"
                android:paddingStart="32dp"
                android:textColor="#FF4A4949"
                android:background="@drawable/header_list_booking"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvKhachDangPhucVu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

    </ScrollView>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatAdd"
        android:backgroundTint="#FFB9F0B8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="6dp"
        android:src="@drawable/baseline_add_24" />

</RelativeLayout>