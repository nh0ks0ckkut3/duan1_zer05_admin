<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.List_Employee_Fragment"

    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:textSize="16dp"
                android:textColor="@color/darkText"
                android:textStyle="bold"
                android:paddingStart="19dp"
                android:paddingTop="8dp"
                android:layout_marginTop="12dp"
                android:text="admin"
                android:background="@color/green"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcViewListAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:textSize="16dp"
                android:textColor="@color/darkText"
                android:textStyle="bold"
                android:paddingStart="19dp"
                android:paddingTop="8dp"
                android:layout_marginTop="12dp"
                android:text="Stylist"
                android:background="@color/green"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcViewListStylist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:textSize="16dp"
                android:textColor="@color/darkText"
                android:textStyle="bold"
                android:paddingStart="19dp"
                android:paddingTop="8dp"
                android:layout_marginTop="12dp"
                android:text="Skinner"
                android:background="@color/green"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcViewListSkinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

    </ScrollView>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatAdd"
        android:backgroundTint="#FFB9F0B8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="6dp"
        android:src="@drawable/baseline_add_24" />
</RelativeLayout>