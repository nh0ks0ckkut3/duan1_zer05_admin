<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.ServiceDetailFragment">

    <ImageView
        android:id="@+id/ivAvatar"
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:layout_marginTop="13dp"
        android:layout_marginHorizontal="111dp"
        android:src="@drawable/skinner"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gội dầu massage"
        android:id="@+id/tvName"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="13dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="37dp"
        android:layout_marginBottom="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã Dịch vụ"
            android:layout_marginStart="9dp"
            android:textColor="#585454"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/tvID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="123456"
            android:textSize="15sp"
            android:layout_marginEnd="28dp"
            android:textColor="@color/darkText"
            android:textAlignment="textEnd"/>

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line_between_item"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="37dp"
        android:layout_marginBottom="32dp">

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá Dịch vụ"
            android:layout_marginStart="9dp"
            android:textColor="#585454"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="100,000 VND"
            android:textSize="15sp"
            android:layout_marginEnd="28dp"
            android:textColor="@color/darkText"
            android:textAlignment="textEnd"/>

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line_between_item"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="37dp"
        android:layout_marginBottom="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhân viên"
            android:layout_marginStart="9dp"
            android:textColor="#585454"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/tvClassify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="thợ chính"
            android:textSize="15sp"
            android:layout_marginEnd="28dp"
            android:textColor="@color/darkText"
            android:textAlignment="textEnd"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        
        <TextView
            android:id="@+id/tvDelete"
            android:gravity="center"
            android:layout_width="143dp"
            android:layout_height="41dp"
            android:text="xóa dịch vụ"
            android:textColor="@color/darkText"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/btn_dialog_cancel"/>
        <TextView
            android:id="@+id/tvEdit"
            android:gravity="center"
            android:layout_width="143dp"
            android:layout_height="41dp"
            android:layout_marginStart="35dp"
            android:text="sửa thông tin"
            android:textColor="@color/darkText"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/btn_confirm_changepassword"/>
        
    </LinearLayout>

</LinearLayout>