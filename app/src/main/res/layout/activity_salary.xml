<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EFF2F3"
    tools:context=".SalaryActivity">

    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:background="#F4EE6E"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/avatar"/>
        <LinearLayout
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trần Ngọc Khánh Vy"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skinner"
                    android:layout_marginEnd="20dp"
                    android:textSize="17sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Salon: 36 NAT"
                    android:textSize="17sp"
                    android:textColor="@color/black"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:background="#fff"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/salary"/>
        <ImageView
            android:background="#fff"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/profile"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_marginStart="10dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="7dp"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/totalsalary"/>

            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng Thu Nhập"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7.123.548 đ"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="80dp"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_margin="15dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_marginStart="10dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/totalsalary"/>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lương cứng"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.820.385 đ"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="120dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_marginStart="10dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/totalsalary"/>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thưởng dịch vụ"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.303.164 đ"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="90dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_marginStart="10dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/totalsalary"/>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thưởng sản phẩm"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.214.328 đ"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="70dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_marginStart="10dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/totalsalary"/>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thưởng tăng ca"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.769.102 đ"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="90dp"/>

    </LinearLayout>

</LinearLayout>