<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Menu_Fragment"
    android:padding="10dp"
    android:background="#E4E4E4"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220sp">

        <ImageView
            android:id="@+id/ivimage"
            android:src="@drawable/ic_person"
            android:layout_width="130sp"
            android:layout_height="140sp"
            android:layout_marginTop="10sp"
            android:layout_marginStart="130sp"
            android:background="#93D2DA"/>

        <TextView
            android:id="@+id/tvname"
            android:layout_width="280sp"
            android:layout_height="30sp"
            android:layout_marginStart="-200sp"
            android:layout_marginTop="160dp"
            android:text="Dầu gội clear bạc hà 500ml"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvmasp"
        android:layout_width="120sp"
        android:layout_height="30sp"
        android:layout_marginStart="1sp"
        android:text="Mã sản phẩm "
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:id="@+id/tvmasp2"
        android:layout_width="120sp"
        android:layout_height="30sp"
        android:layout_marginLeft="250sp"
        android:text="SP001"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="-30dp"
        />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/tvgiasp"
        android:layout_width="120sp"
        android:layout_height="30sp"
        android:layout_marginStart="1sp"
        android:text="Giá sản phẩm"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/tvgiasp2"
        android:layout_width="140sp"
        android:layout_height="30sp"
        android:layout_marginLeft="250sp"
        android:text="100.000 VND"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="-30dp"
        />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/tvgianhap"
        android:layout_width="120sp"
        android:layout_height="30sp"
        android:layout_marginStart="1sp"
        android:text="Giá nhập"
        android:textSize="18sp"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/tvgianhap2"
        android:layout_width="120sp"
        android:layout_height="30sp"
        android:layout_marginLeft="250sp"
        android:text="80.000 VND"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="-30dp"
        />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/tvsoluong"
        android:layout_width="120sp"
        android:layout_height="30sp"
        android:layout_marginStart="1sp"
        android:text="Số lượng"
        android:textSize="18sp"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/tvsoluong2"
        android:layout_width="120sp"
        android:layout_height="30sp"
        android:layout_marginLeft="250sp"
        android:text="100"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="-30dp"
        />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/tvtrangthai"
        android:layout_width="120sp"
        android:layout_height="30sp"
        android:layout_marginStart="1sp"
        android:text="Trạng thái"
        android:textSize="18sp"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/tvluong2"
        android:layout_width="140sp"
        android:layout_height="30sp"
        android:layout_marginLeft="250sp"
        android:text="Cần nhập hàng"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="-30dp"
        />


    <Button
        android:id="@+id/btndelte"
        android:layout_marginTop="30sp"
        android:layout_marginStart="20sp"
        android:layout_width="160sp"
        android:layout_height="50sp"
        android:text="Xóa sản phẩm"
        android:backgroundTint="#E85869"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/btnsua"
        android:layout_marginTop="-50sp"
        android:layout_marginStart="220sp"
        android:layout_width="160sp"
        android:layout_height="50sp"
        android:text="Sửa thông tin"
        android:backgroundTint="#C1C3BE"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/btnnhap"
        android:layout_marginTop="15sp"
        android:layout_marginStart="120sp"
        android:layout_width="175sp"
        android:layout_height="50sp"
        android:text="Nhập thêm hàng"
        android:backgroundTint="#93E831"
        android:textColor="@color/black"/>


</LinearLayout>