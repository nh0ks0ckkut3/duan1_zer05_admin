<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.Add_Service_Fragment">

    <ImageView
        android:id="@+id/img_add_service"
        android:layout_width="126dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"

        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/avatar" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_add_img_service"
        android:layout_width="93dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:text="thêm ảnh"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textAllCaps="false"
        android:background="@drawable/btn_dialog_cancel"
        app:layout_constraintEnd_toEndOf="@+id/img_add_service"
        app:layout_constraintStart_toStartOf="@+id/img_add_service"
        app:layout_constraintTop_toBottomOf="@+id/img_add_service" />

    <EditText
        android:id="@+id/id_add_service"
        android:layout_width="189dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/ground_add_booking"
        android:ems="10"
        android:hint="Nhập mã dịch vụ"
        android:inputType="textPersonName"
        android:padding="8dp"
        app:layout_constraintStart_toEndOf="@+id/img_add_service"
        app:layout_constraintTop_toTopOf="@+id/img_add_service" />

    <EditText
        android:id="@+id/name_add_service"
        android:layout_width="189dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/ground_add_booking"
        android:ems="10"
        android:hint="Nhập tên dịch vụ"
        android:inputType="textPersonName"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="@+id/id_add_service"
        app:layout_constraintStart_toStartOf="@+id/id_add_service"
        app:layout_constraintTop_toBottomOf="@+id/id_add_service" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Giá"
        android:textColor="#4A4949"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_img_service" />

    <EditText
        android:id="@+id/price_add_service"
        android:layout_width="323dp"
        android:layout_height="59dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ground_add_booking"
        android:ems="10"
        android:hint=""
        android:inputType="textPersonName"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Loại nhân viên phục vụ"
        android:textSize="20sp"
        android:textColor="#4A4949"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price_add_service" />

    <EditText
        android:id="@+id/classify_add_service"
        android:layout_width="323dp"
        android:layout_height="59dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ground_add_booking"
        android:ems="10"
        android:hint=""
        android:inputType="textPersonName"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button3"
        android:layout_width="198dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_thanhtoan_itembill"
        android:text="Hoàn Thành"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/classify_add_service" />

</androidx.constraintlayout.widget.ConstraintLayout>