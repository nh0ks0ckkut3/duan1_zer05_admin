        android:id="@+id/tvphone"
        android:layout_width="170sp"
        android:layout_height="20sp"
        android:text="Số đt: 0976024597"
        android:textAlignment="center"
        android:layout_marginStart="-140sp"
        android:textSize="16sp"
        android:layout_marginTop="95dp"/>
    <TextView
        android:id="@+id/tvemail"
        android:layout_width="220sp"
        android:layout_height="20sp"
        android:text="Email: hoabede@gmail.com"
        android:layout_marginStart="-180sp"
        android:textSize="16sp"
        android:layout_marginTop="120dp"/>
    <TextView
        android:id="@+id/tvdiachi"
        android:layout_width="170sp"
        android:layout_height="20sp"
        android:text="Địa chỉ: Quận Gò Vấp"
        android:textAlignment="center"
        android:layout_marginStart="-200sp"
        android:textSize="16sp"
        android:layout_marginTop="145dp"/>
</LinearLayout>

    <TextView
        android:id="@+id/tvmanv"
        android:layout_width="120sp"
        android:layout_height="30sp"
